extends layout

block content
  #mainContainer.mainCon
    #msgContainer.msgCon
      each msg in messages
        #msg.msg
          label(class='msgName')=msg.name
          label(class='msgTime')=msg.timestamp
          p(class='msgText')=msg.text

    form(action="add", method="post")
      input(class='inputBox', type="text", name="text")
      #postDiv(style="text-align:center")
        input(type="submit", value="Post")

    form(action="logout", method="post", style="text-align:right;")
      input(type="submit", value="Log out")

    
    script(src='/javascripts/app.js')